<h1>All Your Lists:</h1>

<%= link_to "Create a list", new_list_path %>

<% @lists.each do |list| %>
  <h3><%= link_to list.title, list_path(list) %></h3>
  <h4><%= list.description %></h4>
  <%= link_to 'Edit', edit_list_path(list) %>
  <%= link_to 'Delete', list_path(list), method: 'delete' %>
<% end %>
